<% answer = notification.answer %>
<% if answer.blank? %>
  <div class="media-body">相关信息已删除</div>
<% else %>
  <%
    question = answer.question
  %>
  <div class="media-left avatar">
    <%= user_avatar_tag(answer.user, :normal) %>
  </div>
  <div class="media-body">
    <div class="media-heading">
      <span class="info">在问题
          <%= question_title_tag(question, answer: answer) %> 回答了：</span>
      <% if !notification.read? %>
        <span class="new label label-warning">新</span>
      <% end %>
    </div>
    <%- if answer.present? -%>
      <div class="summary markdown media-content">
        <%= raw answer.body_html %>
      </div>
    <%- end -%>
  </div>
<% end %>
