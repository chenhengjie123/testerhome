if($("#answers").length == 0){
  Turbolinks.visit(location.href);
} else {
  if ($(".answer[data-id=<%= answer.id %>]").length == 0) {
    var current_floor = parseInt($("#answers").data("last-floor")) + 1;
    $("#answers").data("last-floor",current_floor);
    var dom = $('<%= j(render("answer", answer: answer, answer_counter: @question.answers_count - 1, display_edit: true)) %>');
