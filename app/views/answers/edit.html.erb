<div class="panel panel-default">
  <div class="panel-heading">
    修改回帖 <span class="pull-right"><%= question_title_tag(@question) %></span>
  </div>
  <div class="panel-body">
    <%= simple_form_for([@question, @answer], html: { class: "" }) do |f| %>
    <%= render "shared/error_messages", target: @answer %>
    <div class="edit-tools">
      <%= render "/questions/editor_toolbar" %>
    </div>
    <div class="form-group">
      <%= f.text_area :body, class: "question-editor form-control", rows: 10 %>
    </div>
    <div class="control-group">
      <%= f.submit t("common.save"), class: "btn btn-primary col-xs-2", 'data-disable-with' => t("common.saving") %>
      <% if can? :destroy, @answer %>
      <%= link_to "删除",[@question,@answer], class: "pull-right btn btn-danger", method: :delete, data: { confirm: "确定要删除此回复么？" } %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <%= render "/shared/editor_help_block" %>
  </div>
</div>