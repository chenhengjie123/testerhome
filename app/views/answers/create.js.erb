<% if !@answer.errors.blank? %>
  _questionView.answerCallback(0, '<%= j(@msg) %>');
<% else %>
  <% if @answer.upvote? %>
    Turbolinks.visit(location.href);
  <% else %>
    <%= render 'create_callback', answer: @answer %>

     _questionView.answerCallback(1, '<%= j(@msg) %>');
  <% end %>
<% end %>
