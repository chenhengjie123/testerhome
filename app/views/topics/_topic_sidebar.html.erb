<div id="topic-sidebar">
  <div class="panel panel-default">
    <div class="panel-body">
      <a href="#" class="btn btn-block btn-move-page" data-type="top"><i class="fa fa-arrow-up"></i></a>
      <div class="buttons">
        <div class="group likes opts">
          <%= likeable_tag(@topic) %>
        </div>
        <div class="group">
          <div class="btn-group" role="group">
            <%= topic_follow_tag(@topic, class: 'btn btn-default') %>
            <%= topic_favorite_tag(@topic, class: 'btn btn-default') %>
          </div>
        </div>
      </div>

      <hr />
      <div class="group">
      <%= social_share_button_tag h("#{@topic.title} via: @#{Setting.twitter_id} ") %>
        </div>
      <hr />
      <div class="reply-buttons">
        <div class="total">
          共收到 <b><%= @topic.replies_count %></b> 条回复
        </div>
        <% if not @topic.closed? %>
          <a href="#reply" class="btn btn-success btn-block btn-focus-reply">参与回复</a>
        <% else %>
          <a href="#reply" class="btn disabled btn-success btn-block btn-focus-reply">结贴</a>
        <% end %>
      </div>
      <hr />
      <div class="group opts">
        <% if admin? %>
          <% if !@topic.suggested_at.blank? %>
          <%= link_to raw("<i class='fa fa-thumb-tack'></i> 取消"), unsuggest_admin_topic_path(@topic), 'data-confirm' => '确定要取消置顶么?', method: :post %>
          <% else %>
          <%= link_to raw("<i class='fa fa-thumb-tack'></i> 置顶"), suggest_admin_topic_path(@topic), 'data-confirm' => '确定要置顶么?', method: :post %>
          <% end %>
          <% if !@topic.excellent? %>
                <%= link_to raw("<i class='fa fa-diamond'></i> 加精"), action_topic_path(@topic, type: 'excellent'), title: "设为精华帖" , method: "post", data: { confirm: "确定要设置成精华帖么？" } %>
          <% end %>
          <% if @topic.node_id != Node.no_point_id %>
                <%= link_to raw("<i class='fa fa-ban'></i> 屏蔽"), action_topic_path(@topic, type: 'ban'), method: 'post', title: "屏蔽此贴，移动到违规处理区节点" %>
          <% end %>
        <% end %>

        <% if owner?(@topic) or admin? %>
            <% if can?(:close, @topic) %>
                <% if !@topic.closed? %>
                    <%= link_to raw("<i class='fa fa-check'></i> 结束"), close_topic_path(@topic), method: 'post', title: "关闭讨论／问题已解决", data: { toggle: 'tooltip' }%>
                <% else %>
                    <%= link_to raw("<i class='fa fa-undo'></i> 开启"),  open_topic_path(@topic), method: 'post', title: "重新开启话题", data: { toggle: 'tooltip' } %>
                <% end %>
            <% end %>
            <%= link_to "", edit_topic_path(@topic), class: "fa fa-pencil", title: "修改本帖" %>
        <% end %>
      </div>
      <a href="#" class="btn btn-block btn-move-page" data-type="bottom"><i class="fa fa-arrow-down"></i></a>
    </div>
  </div>

  <div class="notify-updated">
    <a class="update" href="#"><i class="fa fa-bell-o"></i> <b>有新回复！</b>点击这里立即载入</a>
  </div>
</div>